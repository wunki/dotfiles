{
  "ui_font_size": 14,
  "ui_font_family": "Berkeley Mono",
  "tab_bar": {
    "show": true
  },
  "current_line_highlight": "gutter",
  "show_copilot_suggestions": true,
  "show_completions_on_input": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "features": {
    "copilot": true
  },
  "project_panel": {
    "dock": "right"
  },
  "assistant": {
    "dock": "right",
    "version": "1",
    "provider": {
      "default_model": "claude-3-5-sonnet-20240620",
      "name": "anthropic"
    }
  },
  "languages": {
    "Odin": {
      "show_copilot_suggestions": false
    },
    "Rust": {
      "show_copilot_suggestions": false
    },
    "Zig": {
      "show_inline_completions": true,
      "show_copilot_suggestions": false
    },
    "Markdown": {
      "show_copilot_suggestions": false
    },
    "JSON": {
      "show_copilot_suggestions": false
    }
  },
  "theme": "Gruvbox Light",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 12,
  "soft_wrap": "editor_width",
  "preferred_line_length": 100,
  "inlay_hints": {
    "enabled": false
  },
  "journal": {
    "path": "~/Documents/Journal",
    "hour_format": "hour24"
  },
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "option_as_meta": true,
    "dock": "bottom",
    "blinking": "on",
    "font_family": "Berkeley Mono",
    "font_size": 12,
    "shell": {
      "program": "/opt/homebrew/bin/fish"
    },
    "env": {
      "TERM_PROGRAM": "zed",
      "EDITOR": "zed --wait"
    }
  },
  "lsp": {
    "zls": {
      "binary": {
        "path": "/Users/petar/.zvm/bin/zls"
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  "file_types": {
    "CSS": ["scss"]
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
