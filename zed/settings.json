{
  "ui_font_size": 14,
  "ui_font_family": "Berkeley Mono",
  "show_copilot_suggestions": true,
  "show_completions_on_input": false,
  "cursor_blink": false,
  "features": {
    "copilot": true
  },
  "project_panel": {
    "dock": "right"
  },
  "assistant": {
    "dock": "right",
    "version": "1"
  },
  "languages": {
    "Rust": {
      "show_copilot_suggestions": false
    },
    "Zig": {
      "show_copilot_suggestions": false
    },
    "Markdown": {
      "show_copilot_suggestions": false
    },
    "JSON": {
      "show_copilot_suggestions": false
    }
  },
  "theme": "Gruvbox Light Soft",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 12,
  "soft_wrap": "editor_width",
  "preferred_line_length": 100,
  "inlay_hints": {
    "enabled": true
  },
  "journal": {
    "path": "~/Documents/Journal",
    "hour_format": "hour24"
  },
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "option_as_meta": true,
    "dock": "bottom",
    "blinking": "on",
    "font_family": "Berkeley Mono",
    "font_size": 12,
    "shell": {
      "program": "fish"
    }
  },
  "lsp": {
    "zls": {
      "binary": {
        "path": "/Users/petar/.local/bin/zls"
      }
    }
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
