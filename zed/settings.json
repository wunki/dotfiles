{
  "inline_completions": {
    "disabled_globs": [".env", "**/journal"]
  },
  "assistant": {
    "default_model": {
      "model": "claude-3-5-sonnet-latest",
      "provider": "anthropic"
    },
    "dock": "right",
    "provider": null,
    "version": "2"
  },
  "buffer_font_family": "GeistMono Nerd Font",
  "buffer_font_size": 12,
  "current_line_highlight": "gutter",
  "cursor_blink": false,
  "features": {
    "copilot": true,
    "inline_completion_provider": "copilot"
  },
  "file_types": {
    "CSS": ["scss"],
    "Shell Script": [".envrc", ".env"]
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "journal": {
    "hour_format": "hour24",
    "path": "~/Notes"
  },
  "languages": {
    "Fish": {
      "show_inline_completions": false
    },
    "Markdown": {
      "show_inline_completions": false
    },
    "C": {
      "show_inline_completions": false
    },
    "Elixir": {
      "format_on_save": {
        "language_server": {
          "name": "elixir-ls"
        }
      },
      "formatter": {
        "language_server": {
          "name": "elixir-ls"
        }
      },
      "language_servers": [
        "!lexical",
        "elixir-ls",
        "!next-ls",
        "tailwindcss-language-server"
      ],
      "show_inline_completions": false
    },
    "HEEX": {
      "format_on_save": {
        "language_server": {
          "name": "elixir-ls"
        }
      },
      "formatter": {
        "language_server": {
          "name": "elixir-ls"
        }
      },
      "language_servers": [
        "!lexical",
        "elixir-ls",
        "!next-ls",
        "tailwindcss-language-server"
      ]
    },
    "JavaScript": {
      "hard_tabs": true,
      "show_inline_completions": false,
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server",
      "tab_size": 4
    },
    "Plain Text": {
      "show_inline_completions": false
    },
    "TypeScript": {
      "hard_tabs": true,
      "show_inline_completions": false,
      "tab_size": 4
      // "language_servers": ["deno", "!typescript-language-server", "!vtsls", "!eslint"],
      // "formatter": "language_server"
    }
  },
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": false
        }
      }
    },
    "elixir-ls": {
      "binary": {
        "path": "/Users/petar/.local/share/elixir-ls/language_server.sh"
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "zls": {
      "binary": {
        "path": "/Users/petar/.zvm/bin/zls"
      }
    },
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true
      }
    }
  },
  "preferred_line_length": 100,
  "project_panel": {
    "dock": "left"
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "show_completions_on_input": true,
  "show_copilot_suggestions": true,
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "blinking": "off",
    "dock": "bottom",
    "env": {
      "TERM_PROGRAM": "zed"
    },
    "font_family": "GeistMono Nerd Font",
    "font_size": 12,
    "option_as_meta": true,
    "shell": {
      "with_arguments": {
        "args": ["-l", "-i"],
        "program": "/opt/homebrew/bin/fish"
      }
    }
  },
  "theme": "Zedokai Darker (Filter Ristretto)",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ui_font_family": "GeistMono Nerd Font",
  "ui_font_size": 12,
  "vertical_scroll_margin": 5,
  "vim_mode": true
}
