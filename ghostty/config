# vim: filetype=conf

# fish shell
command = /opt/homebrew/bin/fish -il
shell-integration = zsh
shell-integration-features = sudo, title, ssh-terminfo

# fonts
font-family = TX-02
font-size = 12
adjust-cell-height = 20%
font-style-bold = Medium

# colors
window-colorspace = display-p3
selection-invert-fg-bg = true
theme = light:Flexoki Light,dark:gondolin

# padding
window-padding-balance = true
window-padding-x = 7
window-padding-y = 7

# an empty bar, that's all I want
macos-titlebar-proxy-icon = hidden
macos-titlebar-style = tabs

# options
window-save-state = always
mouse-hide-while-typing = true
confirm-close-surface = false

# clipboard
copy-on-select = clipboard
clipboard-read = allow
clipboard-write = allow

# mac
macos-option-as-alt = true
bell-features = no-title,no-attention

# split settings
unfocused-split-opacity = 0.75

# shift-enter in Claude
keybind = shift+enter=text:\n
