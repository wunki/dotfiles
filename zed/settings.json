{
  "theme": "Ros√© Pine",
  "buffer_font_family": "Berkeley Mono",
  "terminal": {
    "option_as_meta": true,
    "shell": {
      "program": "fish"
    }
  },
  "vim_mode": false,
  "telemetry": {
    "metrics": false
  },
  "buffer_font_size": 13,
  "language_overrides": {
    "HTML": {
      "format_on_save": "off"
    },
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": [
            "format",
            "--stdin-filename",
            "{buffer_path}",
            "-"
          ]
        }
      }
    },
    "Python": {
      "format_on_save": {
        "external": {
          "command": "black",
          "arguments": [
            "-"
          ]
        }
      }
    }
  }
}
