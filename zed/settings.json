{
  "icon_theme": "Zed (Default)",
  "middle_click_paste": true,
  "context_servers": {
    "svelte-llm": {
      "source": "custom",
      "enabled": true,
      "command": "/Users/petar/.bun/bin/bunx",
      "args": ["mcp-remote", "https://svelte-llm.khromov.se/mcp/mcp"],
      "env": {}
    },
    "tidewave": {
      "source": "custom",
      "command": "/Users/petar/.local/bin/mcp-proxy",
      "args": ["http://localhost:4000/tidewave/mcp"],
      "env": null
    }
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": [".env", "**/journal"]
  },
  "agent": {
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "Svelte MCP": {
            "tools": {
              "svelte_pattern": true,
              "svelte5_feature": true,
              "svelte5_common_mistakes": true
            }
          }
        }
      },
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "Svelte MCP": {
            "tools": {
              "svelte5_common_mistakes": true,
              "svelte_pattern": true,
              "svelte5_feature": true
            }
          }
        }
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "model": "claude-sonnet-4-thinking-latest",
      "provider": "anthropic"
    },
    "dock": "right"
  },
  "buffer_font_family": "Hermit",
  "tab_bar": {
    "show": true
  },
  "use_autoclose": true,
  "buffer_font_size": 13.0,
  "agent_font_size": 15.0,
  "current_line_highlight": "gutter",
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_types": {
    "CSS": ["scss"],
    "Shell Script": [".envrc", ".env"]
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "journal": {
    "hour_format": "hour24",
    "path": "~/Notes"
  },
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "HTML": {
      "hard_tabs": false,
      "tab_size": 2
    },
    "Elixir": {
      "language_servers": ["elixir-ls", "tailwindcss-language-server"]
    },
    "JavaScript": {
      "hard_tabs": false,
      "tab_size": 2,
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "hard_tabs": false,
      "tab_size": 2
    },
    "Svelte": {
      "hard_tabs": false,
      "tab_size": 2
    }
  },
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": false
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  "preferred_line_length": 100,
  "project_panel": {
    "dock": "left"
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "show_completions_on_input": true,
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "copy_on_select": true,
    "blinking": "off",
    "dock": "bottom",
    "env": {
      "TERM_PROGRAM": "zed"
    },
    "font_family": "Hermit",
    "font_size": 13.0,
    "toolbar": {
      "breadcrumbs": false
    },
    "option_as_meta": true,
    "shell": {
      "with_arguments": {
        "args": ["-l", "-i"],
        "program": "/opt/homebrew/bin/fish"
      }
    }
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Hard",
    "dark": "GitHub Dark Default"
  },
  "experimental.theme_overrides": {
    "players": [
      {
        "selection": "#99FFE43d"
      }
    ]
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ui_font_family": "iA Writer Mono S",
  "ui_font_size": 13.0,
  "vertical_scroll_margin": 5,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  }
}
