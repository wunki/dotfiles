{
  "ui_font_size": 12,
  "ui_font_family": "CommitMonoPetar",
  "tab_bar": {
    "show": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "current_line_highlight": "gutter",
  "show_copilot_suggestions": true,
  "show_completions_on_input": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "features": {
    "copilot": true,
    "inline_completion_provider": "copilot"
  },
  "project_panel": {
    "dock": "left"
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "dock": "right",
    "version": "2",
    "provider": null
  },
  "languages": {
    "Plain Text": {
      "show_inline_completions": false
    },
    "C": {
      "show_inline_completions": false
    },
    "Elixir": {
      "show_inline_completions": false,
      "language_servers": ["!lexical", "elixir-ls", "!next-ls", "tailwindcss-language-server"],
      "formatter": { "language_server": { "name": "elixir-ls" } },
      "format_on_save": { "language_server": { "name": "elixir-ls" } }
    },
    "HEEX": {
      "language_servers": ["!lexical", "elixir-ls", "!next-ls", "tailwindcss-language-server"],
      "formatter": { "language_server": { "name": "elixir-ls" } },
      "format_on_save": { "language_server": { "name": "elixir-ls" } }
    },
    "JavaScript": {
      "show_inline_completions": false,
      "tab_size": 4,
      "hard_tabs": true
    },
    "TypeScript": {
      "show_inline_completions": true,
      "tab_size": 4,
      "hard_tabs": true
    }
  },
  "theme": "Zedokai Darker (Filter Ristretto)",
  "buffer_font_family": "CommitMonoPetar",
  "buffer_font_size": 12,
  "soft_wrap": "editor_width",
  "preferred_line_length": 100,
  "inlay_hints": {
    "enabled": false
  },
  "journal": {
    "path": "~/Documents/Journal",
    "hour_format": "hour24"
  },
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "option_as_meta": true,
    "dock": "bottom",
    "blinking": "off",
    "font_family": "CommitMonoPetar",
    "font_size": 12,
    "shell": {
      "with_arguments": {
        "program": "/opt/homebrew/bin/fish",
        "args": ["-l", "-i"]
      }
    },
    "env": {
      "TERM_PROGRAM": "zed",
      "EDITOR": "zed --wait"
    }
  },
  "lsp": {
    "zls": {
      "binary": {
        "path": "/Users/petar/.zvm/bin/zls"
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "next-ls": {
      "binary": {
        "path": "/opt/homebrew/bin/nextls"
      }
    },
    "elixir-ls": {
      "binary": {
        "path": "/Users/petar/.local/share/elixir_ls/language_server.sh"
      }
    }
  },
  "file_types": {
    "CSS": ["scss"],
    "Shell Script": [".envrc", ".env"]
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
