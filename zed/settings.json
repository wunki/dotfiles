{
  "theme": "Ros√© Pine Moon",
  "buffer_font_family": "Berkeley Mono",
  "soft_wrap": "editor_width",
  "preferred_line_length": 100,
  "journal": {
    "path": "~/Documents/Journal"
  },
  "terminal": {
    "option_as_meta": true,
    "font_family": "BerkeleyMono Nerd Font Mono",
    "shell": {
      "program": "fish"
    }
  },
  "vim_mode": true,
  "telemetry": {
    "metrics": false
  },
  "buffer_font_size": 13,
  "language_overrides": {
    "HTML": {
      "format_on_save": "off"
    },
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": [
            "format",
            "--stdin-filename",
            "{buffer_path}",
            "-"
          ]
        }
      }
    },
    "Python": {
      "format_on_save": {
        "external": {
          "command": "black",
          "arguments": [
            "-"
          ]
        }
      }
    }
  }
}
