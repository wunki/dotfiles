#!/bin/env sh

# QT must be able to find my theme
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"

# Set the correct DPI
xrandr --dpi 192

# X Settings
xrdb .Xresources

# Disable PC-Speaker
xset b off &

# Disable power-saving
xset -dpms

# Disable screen-saver
xset s off

# Key repeat
xset r rate 300 80

# Set the left cursor as default
xsetroot -cursor_name left_ptr

# Hide the mouse cursor
unclutter -idle 3 &

# Dvorak keyboard
setxkbmap dvorak -option ctrl:nocaps

# Set background
feh --bg-tile ~/pictures/wallpapers/dark_mosaic.png

# Thunar
thunar --daemon &

# I want to be able to sleep at night
# redshift -l 52:4 -t 6000:4800 -m vidmode &

# SSH agent
eval `ssh-agent`

# Add home bin path, needed for dmenu
export PATH="$HOME/bin:$HOME/.npm/bin:$HOME/.cargo/bin:$HOME/lib/elixir/bin:$PATH"

#
# Start window manager
#
exec xmonad > $HOME/.xmonad.log 2>&1
