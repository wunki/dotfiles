{
  "context_servers": {},
  "ssh_connections": [
    {
      "host": "desktop",
      "projects": [
        {
          "paths": ["~/code/pledgewise"]
        }
      ]
    }
  ],
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager",
    "disabled_globs": [".env", "**/journal"]
  },
  "agent": {
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "Svelte MCP": {
            "tools": {
              "svelte_pattern": true,
              "svelte5_feature": true,
              "svelte5_common_mistakes": true
            }
          }
        }
      },
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "Svelte MCP": {
            "tools": {
              "svelte5_common_mistakes": true,
              "svelte_pattern": true,
              "svelte5_feature": true
            }
          }
        }
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_model": {
      "model": "gemini-2.5-pro-preview-03-25",
      "provider": "google"
    },
    "dock": "right",
    "version": "2"
  },
  "buffer_font_family": "TX-02",
  "tab_bar": {
    "show": true
  },
  "use_autoclose": true,
  "buffer_font_size": 12.0,
  "agent_font_size": 13.0,
  "current_line_highlight": "gutter",
  "cursor_blink": false,
  "features": {
    "copilot": true,
    "edit_prediction_provider": "zed"
  },
  "file_types": {
    "CSS": ["scss"],
    "Shell Script": [".envrc", ".env"]
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "journal": {
    "hour_format": "hour24",
    "path": "~/Notes"
  },
  "languages": {
    "HTML": {
      "hard_tabs": false,
      "tab_size": 2
    },
    "JavaScript": {
      // "language_servers": ["deno", "!typescript-language-server", "!vtsls", "!eslint"],
      "hard_tabs": false,
      "tab_size": 2
      // "formatter": "language_server"
    },
    "TypeScript": {
      // "language_servers": ["deno", "!typescript-language-server", "!vtsls", "!eslint"],
      "hard_tabs": false,
      "tab_size": 2
      // "formatter": "language_server"
    },
    "Svelte": {
      // "language_servers": ["deno", "!typescript-language-server", "!vtsls", "!eslint"],
      "hard_tabs": false,
      "tab_size": 2
      // "formatter": "language_server"
    }
  },
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": false
        }
      }
    },
    "lsp": {
      "biome": {
        "settings": {
          "require_config_file": true
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "zls": {
      "binary": {
        "path": "~/.zvm/bin/zls"
      }
    },
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true
      }
    }
  },
  "preferred_line_length": 100,
  "project_panel": {
    "dock": "left"
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "show_completions_on_input": true,
  "show_copilot_suggestions": true,
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "blinking": "off",
    "dock": "bottom",
    "env": {
      "TERM_PROGRAM": "zed"
    },
    "font_family": "TX-02",
    "font_size": 12.0,
    "toolbar": {
      "breadcrumbs": false
    },
    "option_as_meta": true,
    "shell": {
      "with_arguments": {
        "args": ["-l", "-i"],
        "program": "/opt/homebrew/bin/fish"
      }
    }
  },
  "theme": {
    "mode": "system",
    "dark": "Rich Vesper",
    "light": "Gruvbox Light"
  },
  "experimental.theme_overrides": {
    "players": [
      {
        "selection": "#99FFE43d"
      }
    ]
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ui_font_family": "iA Writer Duo S",
  "ui_font_size": 12.0,
  "vertical_scroll_margin": 5,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  }
}
